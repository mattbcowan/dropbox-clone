html
  head
    title= title
  body
  h1= message
  ul
    each file in files
      li
        a(href='/files/' + file._id) file.title
        a(href='/files/' + file._id + '/edit') Edit
        form(action='/files/' + file._id + '?_method=DELETE', method='POST')
          input(type='submit', value='DELETE')
